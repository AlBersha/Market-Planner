<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="marketplanner.stocks"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="28"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="marketplanner.stocks.StockApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_bull"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_bull"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="marketplanner.stocks.AddStockActivity"
            android:label="Add Stock Symbol"
            android:parentActivityName="marketplanner.stocks.EditListActivity" >
        </activity>
        <activity
            android:name="marketplanner.stocks.EditListActivity"
            android:label="Edit Stock List"
            android:parentActivityName="marketplanner.stocks.MainActivity" />
        <activity
            android:name="marketplanner.stocks.SettingsActivity"
            android:label="@string/settings_activity_title"
            android:parentActivityName="marketplanner.stocks.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="marketplanner.stocks.MainActivity" />
        </activity>
        <activity
            android:name="marketplanner.stocks.MainActivity"
            android:colorMode="wideColorGamut"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>