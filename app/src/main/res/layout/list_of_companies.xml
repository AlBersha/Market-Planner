<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/companyLogoView"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_android"/>

        <TextView
            android:id="@+id/companyTitleTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="List element"
            android:layout_toEndOf="@id/companyLogoView"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/companySubtitleTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="company subtitle"
            android:layout_toEndOf="@id/companyLogoView"
            android:layout_below="@id/companyTitleTextView"
            />

        <TextView
            android:id="@+id/currentCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:text="current cost" />

        <TextView
            android:id="@+id/costDifferenceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currentCostTextView"
            android:layout_alignParentEnd="true"
            android:text="cost difference"
            android:textColor="@color/black" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>