<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/stockFragment">
    <fragment
        android:id="@+id/addStockFragment"
        android:name="marketplanner.stocks.AddStockFragment"
        android:label="fragment_add_stock"
        tools:layout="@layout/fragment_add_stock" />
    <fragment
        android:id="@+id/editListFragment"
        android:name="marketplanner.stocks.EditListFragment"
        android:label="fragment_edit_list"
        tools:layout="@layout/fragment_edit_list" />
    <fragment
        android:id="@+id/stockFragment"
        android:name="marketplanner.stocks.StockFragment"
        android:label="fragment_stock"
        tools:layout="@layout/fragment_stock" >
        <action
            android:id="@+id/action_stockFragment_to_editListFragment"
            app:destination="@id/editListFragment" />
        <action
            android:id="@+id/action_stockFragment_to_addStockFragment"
            app:destination="@id/addStockFragment" />
        <action
            android:id="@+id/action_stockFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="marketplanner.stocks.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>